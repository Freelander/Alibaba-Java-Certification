<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/layout_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:text="选择你喜欢的主题色"
        android:textColor="@color/hint_txt"
        android:textSize="14sp"/>

    <com.gojun.certification.widget.pulltorefresh.PullToRefreshRecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:text="拖动滑竿自定义你喜欢的主题色"
        android:textColor="@color/hint_txt"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <SeekBar
            android:id="@+id/seekBar_r"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="-10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:max="255"
            android:maxHeight="2dp"
            android:progress="200"
            android:progressDrawable="@drawable/seekbar_style_red"
            android:thumb="@drawable/knob"
            android:thumbOffset="0dp"/>

        <TextView

            android:id="@+id/seekBar_r_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:minWidth="30dp"
            android:paddingBottom="5dp"
            android:text="255"
            android:textColor="@color/theme_color"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SeekBar
            android:id="@+id/seekBar_g"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="-10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:max="255"
            android:maxHeight="2dp"
            android:progress="100"
            android:progressDrawable="@drawable/seekbar_style_green"
            android:thumb="@drawable/knob"
            android:thumbOffset="0dp"/>

        <TextView
            android:id="@+id/seekBar_g_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:minWidth="30dp"
            android:paddingBottom="5dp"
            android:text="255"
            android:textColor="#50AD55"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SeekBar
            android:id="@+id/seekBar_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="-10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:max="255"
            android:maxHeight="2dp"
            android:progress="150"
            android:progressDrawable="@drawable/seekbar_style"
            android:textStyle="bold"
            android:thumb="@drawable/knob"
            android:thumbOffset="0dp"/>

        <TextView
            android:id="@+id/seekBar_b_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:minWidth="30dp"
            android:paddingBottom="5dp"
            android:text="255"

            android:textColor="@color/blue"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>