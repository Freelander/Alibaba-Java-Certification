<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:background="@color/bg_color"
       android:layout_height="match_parent"
       android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme_color">


            <TextView
                android:id="@+id/tab_test"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/tab_test_sel"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="练习"
                android:textColor="@color/tab_txt_sel"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tab_exam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/tab_exam_sel"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="模拟认证"
                android:textColor="@color/tab_txt_sel"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tab_failed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/tab_failed_sel"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="错题"
                android:textColor="@color/tab_txt_sel"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tab_setting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/tab_setting_sel"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="设置"
                android:textColor="@color/tab_txt_sel"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/ad_wel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/ad_close"
            android:visibility="gone"
            android:layout_width="70dp"
            android:background="@drawable/shape_close_bg"
            android:gravity="center"
            android:text="3S关闭"
            android:layout_gravity="right"
            android:layout_margin="20dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</merge>